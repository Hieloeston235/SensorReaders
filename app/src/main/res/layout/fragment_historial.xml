                    android:textSize="20sp"
                    android:textColor="@color/primary_color"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Datos completos de sensores registrados"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="6dp"
                    android:alpha="0.8" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Filtros y Descargas -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ—“ï¸ Filtros de Fecha"
                    android:textSize="17sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp" />

                <!-- Filtros de fecha personalizados -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <Button
                        android:id="@+id/btnFechaInicio"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="ðŸ“… Fecha Inicio"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_outline"
                        android:textColor="@color/primary_color"
                        android:fontFamily="sans-serif-medium" />

                    <Button
                        android:id="@+id/btnFechaFin"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="ðŸ“… Fecha Fin"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_outline"
                        android:textColor="@color/primary_color"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <!-- Botones de filtro rÃ¡pido -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnHoy"
                        android:layout_width="0dp"
                        android:layout_height="46dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="ðŸ“… Hoy"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_secondary"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-medium"
                        android:elevation="4dp"
                        android:minWidth="80dp"
                        android:paddingHorizontal="12dp" />

                    <Button
                        android:id="@+id/btnAyer"
                        android:layout_width="0dp"
                        android:layout_height="46dp"
                        android:layout_weight="1.1"
                        android:layout_marginHorizontal="4dp"
                        android:text="ðŸ“… Ayer"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_secondary"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-medium"
                        android:elevation="4dp"
                        android:minWidth="85dp"
                        android:paddingHorizontal="12dp" />

                    <Button
                        android:id="@+id/btn7Dias"
                        android:layout_width="0dp"
                        android:layout_height="46dp"
                        android:layout_weight="1.2"
                        android:layout_marginStart="8dp"
                        android:text="ðŸ“… 7 dÃ­as"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:background="@drawable/button_secondary"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-medium"
                        android:elevation="4dp"
                        android:minWidth="90dp"
                        android:paddingHorizontal="12dp" />

                </LinearLayout>

                <!-- Boton Aplicar Filtro -->
                <Button
                    android:id="@+id/btnAplicarFiltro"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="ðŸ” Aplicar Filtro Personalizado"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_primary"
                    android:layout_marginBottom="24dp"
                    android:fontFamily="sans-serif-medium"
                    android:elevation="6dp" />

                <!-- Separador Visual -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/primary_light"
                    android:layout_marginBottom="20dp"
                    android:alpha="0.3" />

                <!-- Opciones de Descarga -->
                <TextView
