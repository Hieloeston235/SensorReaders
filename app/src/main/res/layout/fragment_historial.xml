                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tvContadorRegistros"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 registros"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:background="@drawable/badge_background"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

                <!-- Contenedor horizontal con scroll para la tabla -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Header de la tabla  -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/table_header_background"
                            android:padding="8dp"
                            android:elevation="2dp">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="ðŸ“… Fecha/Hora"
                                android:textSize="10sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:fontFamily="sans-serif-medium"
                                android:padding="4dp" />

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:text="ðŸŒ¡ï¸ Temp"
                                android:textSize="10sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:fontFamily="sans-serif-medium"
                                android:padding="4dp" />

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:text="ðŸ’§ Hum"
                                android:textSize="10sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:fontFamily="sans-serif-medium"
                                android:padding="4dp" />

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:text="ðŸŒ¬ï¸ PresiÃ³n"
                                android:textSize="10sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:fontFamily="sans-serif-medium"
                                android:padding="4dp" />

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:text="ðŸŒ± Hum Suelo"
                                android:textSize="10sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:fontFamily="sans-serif-medium"
                                android:padding="4dp" />

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:text="â˜€ï¸ Luz"
                                android:textSize="10sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:fontFamily="sans-serif-medium"
                                android:padding="4dp" />

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:text="ðŸ’¨ Viento"
                                android:textSize="10sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:fontFamily="sans-serif-medium"
                                android:padding="4dp" />

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:text="ðŸŒ§ï¸ Lluvia"
                                android:textSize="10sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:fontFamily="sans-serif-medium"
                                android:padding="4dp" />

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:text="ðŸ”¥ Humo"
                                android:textSize="10sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:fontFamily="sans-serif-medium"
                                android:padding="4dp" />

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:text="âš¡ Gas"
                                android:textSize="10sp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:fontFamily="sans-serif-medium"
                                android:padding="4dp" />

                        </LinearLayout>

                        <!-- Contenedor para la lista de datos -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewHistorial"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:nestedScrollingEnabled="false"
                            android:background="@drawable/table_content_background"
                            android:paddingVertical="4dp" />

                    </LinearLayout>

                </HorizontalScrollView>

                <!-- Mensaje cuando no hay datos -->
                <LinearLayout
                    android:id="@+id/layoutNoData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="40dp"
                    android:visibility="gone"
                    android:background="@drawable/no_data_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“­"
                        android:textSize="56sp"
                        android:layout_marginBottom="20dp"
                        android:alpha="0.7" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No hay datos para mostrar"
                        android:textSize="18sp"
                        android:textColor="@color/text_secondary"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selecciona un rango de fechas diferente\no espera a que se registren nuevos datos"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center"
                        android:layout_marginTop="12dp"
                        android:alpha="0.8"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>